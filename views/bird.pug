extends layout
 
block content
  h1= title
  - let items = results
  div(class="container-fluid")
    div(class="row")
      each bird, index in results
        div(class="col-sm-2", onclick=`buy(${index})`) #{bird.name}, #{bird.color}, #{bird.speed}
        - let destination = `/bird/update?id=${bird._id}` // Fix variable name and template string
        div(class="col-sm-2", onclick=`buy(${bird})`) #{bird.name}, #{bird.color}, #{bird.speed} 
        button.btn(class="btn-primary ml-1", onclick=`dispatch('${destination}')`) Update
  script.
    function buy(a) {
      alert(`You purchased Item ${results[a].name}`); // Fix the alert message
    }
 
    function dispatch(path) {
      window.location.href = path;
    }
 


          